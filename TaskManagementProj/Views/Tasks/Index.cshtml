@model IEnumerable<TaskManagementProj.Models.TaskModel>

@{
    ViewBag.Title = "Index";
}

<h2>All Tasks</h2>

<table class="table">
    <tr>
        <th>
            Project Title
        </th>
        <th>
            User
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompletePercentage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCompleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinishedComment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Project.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Detail)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.CompletePercentage)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsCompleted)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreatDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FinishedComment)
    </td>
    <td>
        @Html.ActionLink("Updata", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        @if (item.IsCompleted != true)
        {
            @Html.ActionLink("| Mark as Completed", "MarkComplete", new { id = item.Id })
            @Html.ActionLink("| Leave an urgent Note", "LeaveUrgentNote", new { id = item.Id })
        }      
    </td>
</tr>
}

</table>
